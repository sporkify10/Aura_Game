const express = require('express');
const cors = require('cors');
const app = express();
const port = 3000;

app.use(cors());
app.use(express.json());

// Example route
app.get('/', (req, res) => {
  res.send('Aura Game Backend is running!');
});

app.listen(port, () => {
  console.log(`Server is running at http://localhost:${port}`);
});
